hexec("0123456", (7,), (a) -> {
	local result = "";
	for (local x: [:a])
		result += x;
	return result;
});

hexec("456", (4, 7), (a, b) -> {
	local result = "";
	for (local x: [a:b])
		result += x;
	return result;
});

hexec("fooxx7", ("x", 7), (a, b) -> {
	local x = "foo";
	do {
		x += a;
	} while (x == "foox");
	return x.__add__(b);
});
hexec("fooxx7", ("xx", 7), (a, b) -> {
	local x = "foo";
	do {
		x += a;
	} while (x == "foox");
	return x.__add__(b);
});
