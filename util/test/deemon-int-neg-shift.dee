import * from deemon;
import * from errors;

#define TRY(x) (try x catch (e...) e)

local lshift = TRY(42 << -1);
assert lshift is NegativeShift;
assert lshift.left == true;
assert lshift.lhs == 42;
assert lshift.rhs == -1;

local rshift = TRY(43 >> -2);
assert rshift is NegativeShift;
assert rshift.left == false;
assert rshift.lhs == 43;
assert rshift.rhs == -2;


local lshift = TRY(true << -1);
assert lshift is NegativeShift;
assert lshift.left == true;
assert lshift.lhs == true;
assert lshift.rhs == -1;

local rshift = TRY(false >> -2);
assert rshift is NegativeShift;
assert rshift.left == false;
assert rshift.lhs == false;
assert rshift.rhs == -2;
