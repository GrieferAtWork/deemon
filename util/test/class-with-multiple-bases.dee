import * from deemon;

class A {
	function foo() {
		return 1;
	}
}

class B {
	member y;
	function bar() {
		return 2;
	}
}

class C: A, B, Numeric {
	function foo() {
		return 10 + (this as A).foo();
	}
}

local x = C();
x.y = "foo";
assert x is A;
assert x is B;
assert x is C;
assert x is Numeric;
assert x.y == "foo";
assert x.y is string;
assert C.__base__ === B, "Because `B' has instance members, it must be the primary base";
assert C.__mro__ == { C, A, B, Numeric, Object };
assert C.__bases__ == { A, B, Numeric };

assert x.foo() == 11;
assert x.bar() == 2;
