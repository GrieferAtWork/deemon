import * from threading;
import * from deemon;

function testLock(lock: Lock, isExclusive: bool = true) {
	assert lock is Lock;
	assert lock.available;
	assert !lock.acquired;

	assert lock.tryacquire();
	assert isExclusive ? !lock.available : lock.available;
	assert lock.acquired;

	lock.release();
	assert lock.available;
	assert !lock.acquired;

	lock.acquire();
	assert isExclusive ? !lock.available : lock.available;
	assert lock.acquired;
	lock.release();
	assert lock.available;
	assert !lock.acquired;

	assert lock.timedacquire(0);
	assert isExclusive ? !lock.available : lock.available;
	assert lock.acquired;
	lock.release();
	assert lock.available;
	assert !lock.acquired;

	with (lock) {
		assert isExclusive ? !lock.available : lock.available;
		assert lock.acquired;
	}
	assert lock.available;
	assert !lock.acquired;
}

function testRWLock(lock: RWLock) {
	assert lock is RWLock;
	testLock(lock.shared, false);
	testLock(lock.exclusive);

	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	assert lock.tryread();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	assert lock.tryread();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	assert !lock.tryupgrade();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	lock.endread();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	lock.endread();
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	lock.read();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	assert lock.tryupgrade();
	assert lock.reading;
	assert lock.writing;
	assert !lock.canread;
	assert !lock.canwrite;

	lock.downgrade();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	assert lock.upgrade();
	assert lock.reading;
	assert lock.writing;
	assert !lock.canread;
	assert !lock.canwrite;

	lock.downgrade();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	lock.endread();
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	assert lock.trywrite();
	assert lock.reading;
	assert lock.writing;
	assert !lock.canread;
	assert !lock.canwrite;

	lock.endwrite();
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	lock.read();
	assert lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert !lock.canwrite;

	lock.end();
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	lock.write();
	assert lock.reading;
	assert lock.writing;
	assert !lock.canread;
	assert !lock.canwrite;

	lock.end();
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	with (lock.shared) {
		assert lock.reading;
		assert !lock.writing;
		assert lock.canread;
		assert !lock.canwrite;
	}
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;

	with (lock.exclusive) {
		assert lock.reading;
		assert lock.writing;
		assert !lock.canread;
		assert !lock.canwrite;
	}
	assert !lock.reading;
	assert !lock.writing;
	assert lock.canread;
	assert lock.canwrite;
}

testLock(AtomicLock());
testLock(SharedLock());
testLock(Semaphore(1));
testRWLock(AtomicRWLock());
testRWLock(SharedRWLock());

assert SharedLock.derivedfrom(AtomicLock);
assert SharedRWLock.derivedfrom(AtomicRWLock);


function testEvent(e: Event) {
	assert !e.isset;

	e.set();
	assert e.isset;

	e.clear();
	assert !e.isset;

	e.isset = true;
	assert e.isset;

	e.isset = false;
	assert !e.isset;
}

testEvent(Event());
