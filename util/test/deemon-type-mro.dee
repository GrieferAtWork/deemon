import * from deemon;
import rt;
import ctypes;
import .common.test;

/* Instance-attributes of `Type' are unbound (aka. instance-wrappers)
 * when accessed as attributes of `Type' itself. */
assert Type.baseof(Type, Type);
assert Type.baseof(Type, type(File));

/* Assert the MRO/Bases of all type-types */
test.assertSequence(Type.__mro__(Type), { Type, Object, Callable });
test.assertSequence(Type.__bases__(Type), { Object, Callable });
test.assertSequence(Type.__mro__(rt.FileType), { rt.FileType, Type, Object, Callable });
test.assertSequence(Type.__bases__(rt.FileType), { Type });
test.assertSequence(Type.__mro__(ctypes.StructuredType), { ctypes.StructuredType, Type, Object, Callable });
test.assertSequence(Type.__bases__(ctypes.StructuredType), { Type });


/* Assert the MRO/Bases of some misc. other types */
test.assertSequence(Type.__mro__(File), { File, Object });
test.assertSequence(Type.__bases__(File), { Object });
test.assertSequence(Type.__mro__(Dict), { Dict, Mapping, Sequence, Object });
test.assertSequence(Type.__bases__(Dict), { Mapping });
