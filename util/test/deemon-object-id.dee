import * from errors;

class Foo {
	func() {
		return this.id;
	}
}
function func2(x) {
	return x.id;
}
local x = Foo();
assert x.id == x.func();
assert x.id == Foo.func(x);
assert x.id == Foo.func.__thiscall__(x);
assert x.id == Foo.func.__thiscall__(x, ());
assert x.id == func2(x);
assert x.id == func2(x: x);
assert x.id == func2.__thiscall__(x);
assert x.id == func2.__thiscall__(x, ());
