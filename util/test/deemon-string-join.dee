import * from deemon;
import .common.test;

function tryAsBytes(x) {
	for (local y: x) {
		if (y is string) {
			yield y.bytes();
		} else {
			yield y;
		}
	}
}

function assertJoin(expected, sep, seq) {
	test.assertEqualsTyped(expected, sep.join(seq));
	test.assertEqualsTyped(expected, sep.join(Tuple(seq)));
	test.assertEqualsTyped(expected, sep.join(List(seq)));
	test.assertEquals(expected, sep.bytes().join(seq));
	test.assertEquals(expected, sep.bytes().join(Tuple(seq)));
	test.assertEquals(expected, sep.bytes().join(List(seq)));
	test.assertEqualsTyped(expected.bytes(), sep.bytes().join(seq));
	test.assertEqualsTyped(expected.bytes(), sep.bytes().join(Tuple(seq)));
	test.assertEqualsTyped(expected.bytes(), sep.bytes().join(List(seq)));
	test.assertEqualsTyped(expected, sep.join(tryAsBytes(seq)));
	test.assertEquals(expected, sep.bytes().join(tryAsBytes(seq)));
	test.assertEqualsTyped(expected.bytes(), sep.bytes().join(tryAsBytes(seq)));
}

assertJoin("", "", {});
assertJoin("", ",", {});
assertJoin("", "foobar", {});
assertJoin("10,20,30", ",", {10, 20, 30});
assertJoin("10,20,30", ",", {"10", 20, "30"});
assertJoin("10foobar20foobar30", "foobar", {"10", 20, "30"});
