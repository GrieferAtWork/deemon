import c.fixincludes;
import posix;

function main() {
	local final ROOTDIR = posix.resolvepath(
		posix.joinpath(posix.headof(__FILE__), r"../.."));

	fixincludes
		.FixIncludes()
		.addIncludePaths(include: {
			ROOTDIR + "/include",
			ROOTDIR + "/include/deemon/kos-headers",
		}, exclude: {
			ROOTDIR + "/include/deemon/cxx",
		})
		.finishSetup()
#if 1
		.dumpExports()
		.dumpHeaders()
#else
		.fixPaths(include: {
			ROOTDIR + "/src/deemon",
			ROOTDIR + "/src/dex",
			ROOTDIR + "/include/deemon",
		}, exclude: {
			ROOTDIR + "/include/deemon/kos-headers",
			ROOTDIR + "/src/dex/ctypes/ffi",
			ROOTDIR + "/src/deemon/method-hints",
			ROOTDIR + "/src/dex/hashlib/algorithms",
			ROOTDIR + "/src/dex/_hostasm/libgen86",
		})
#endif
		;
}

#ifdef __MAIN__
main();
#endif /* __MAIN__ */
